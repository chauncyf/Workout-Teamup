<div class="modal fade" id="newPosterModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel">New Activity</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Date:</label>
            <input type="text" class="form-control" id="recipient-name" placeholder="When will the activity start?">
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Where:</label>
            <input type="text" class="form-control" id="recipient-name" placeholder="Where to meet?">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Intro the Activity:</label>
<!--            <input type="text" class="form-control" id="recipient-name" placeholder="Say something">-->
            <textarea class="form-control" id="message-text" placeholder="Say something"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">✕✕</button>
        <button type="button" class="btn btn-primary">✓</button>
      </div>
    </div>
  </div>
</div>

<script>
  $('#exampleModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget) // Button that triggered the modal
      var recipient = button.data('whatever') // Extract info from data-* attributes
      // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
      // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
      var modal = $(this)
      modal.find('.modal-title').text('New message to ' + recipient)
      modal.find('.modal-body input').val(recipient)
  })
</script>


