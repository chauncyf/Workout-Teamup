<% if logged_in? %>
if ($('#posterModal').is(":not(':hidden')")) {
    posterModalRefresh()
    new PNotify({
        title: '<i class="fas fa-check-circle"></i> Comment Success',
        type: 'success',
        delay: 2000
    });
}
<% else %>
  new PNotify({
      title: '<i class="fas fa-exclamation-circle"></i> Please login',
      type: 'error',
      delay: 2000
  });
<% end %>