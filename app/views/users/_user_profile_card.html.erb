<% color = %w(purple pink blue teal green orange brown grey).sample %>

<div class="card shadow-lg m-0" id="profile-card">
  <div class="card-header px-3 py-2 text-white material-head-<%= color %>">
    <ul class="list-inline">
      <li class="list-inline-item align-middle" id="card-starter-avatar">
        <%= avatar_for(user) %>
      </li>
      <li class="list-inline-item align-middle">
        <ul class="list-unstyled">
          <li id="activity-starter-name"><%= user.user_name %></li>
          <li id="activity-update-date">Follower: 1000</li>
        </ul>
      </li>
    </ul>
  </div>

  <div class="card-body px-3 py-2 material-body-<%= color %>"><%= user.motto %>
    <div class="row justify-content-center text-center bg-transparent">
      <a href="#" class="btn-primary col-auto m-1 material-head-<%= color %>">Follow</a>
      <a href="#" class="btn-primary col-auto m-1 material-head-<%= color %>">Message</a>
    </div>
  </div>
</div>
